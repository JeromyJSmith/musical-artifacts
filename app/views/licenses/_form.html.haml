= form_for @license do |f|
  - if @license.errors.any?
    #error_explanation
      %h2= "#{pluralize(@license.errors.count, "error")} prohibited this license from being saved:"
      %ul
        - @license.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
