- if @artifacts.empty?
  .artifact-item.empty-search
    %p= t('.none')

- @artifacts.each do |artifact|
  .artifact-item{class: "#{cycle('dark', 'light')}-item"}
    %h3= link_to artifact.name, artifact
    %span
      = t('_other.by')
      = artifact.author

    .artifact-content.pad-top
      %p.small
        = artifact.description.truncate(480)

    %p.more-info
      = link_to t('.more_info'), artifact_path(artifact)

    .artifact-tags
      = render 'artifact_tags', artifact: artifact

    .artifact-license
      = display_license(artifact, small: true)

    = render partial: 'buttons', locals: { artifact: artifact }
