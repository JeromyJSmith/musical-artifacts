= content_for :title, t('_other.login')

.container.container-login
  .col-md-6.col-md-offset-3

    .panel.panel-default
      .panel-heading
        %h2.panel-title
          %strong= t('_other.login')
      .panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f|
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, class: 'form-control'

          .form-group
            = f.label :password
            = link_to "(#{t('.forgot_password')})", new_user_password_path
            = f.password_field :password, autocomplete: "off", class: 'form-control'

          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me

          = f.submit t('_other.login') , class: 'btn btn-default'

    = render 'users/omniauth_providers'