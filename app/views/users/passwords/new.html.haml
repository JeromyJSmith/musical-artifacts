= content_for :title, 'Forgot your password?'

.container.container-login
  .col-md-6.col-md-offset-3

    .panel.panel-default
      .panel-heading
        %h2.panel-title
          %strong Forgot your password?
      .panel-body

        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-horizontal') do |f|
          = devise_error_messages!
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, class: 'form-control'
          .actions
            = f.submit "Send me reset password instructions", class: 'btn btn-default'

